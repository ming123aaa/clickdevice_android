<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_main_open_Accessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启(无障碍)辅助功能"
        android:textColor="@color/blackLine"
        android:background="@drawable/btn_background"
        android:onClick="openAccessibility"/>


    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blackLine"
        android:background="@drawable/btn_background"
        android:onClick="startClickDevice"
        android:text="打开连点器" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:textColor="@color/blackLine"
            android:text="时间间隔（单位ms 最小值为30）:" />

        <EditText
            android:id="@+id/edit_time"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:maxLength="6"
            android:theme="@style/MyEditText"
            android:textColor="@color/blackLine"
            android:text="1000" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:text="次数:"
            android:textColor="@color/blackLine"/>

        <EditText
            android:id="@+id/edit_number"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:maxLength="6"
            android:theme="@style/MyEditText"
            android:textColor="@color/blackLine"
            android:text="1" />
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通脚本"
        android:textColor="@color/blackLine"
        android:background="@drawable/btn_background"
        android:onClick="startScriptAc"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="录制脚本"
        android:textColor="@color/blackLine"
        android:background="@drawable/btn_background"
        android:onClick="startRecordAc"/>

</LinearLayout>